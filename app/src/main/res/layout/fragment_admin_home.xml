<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/g_line"
            tools:context=".fragments.admin.AdminHomeFragment">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/g_card_background"
                android:layout_margin="5dp"
                android:paddingBottom="5dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctTop1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/img_product1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/mau_giay"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linear_product_name1"
                        android:layout_width="0dp"
                        android:paddingRight="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/img_product1"
                        app:layout_constraintTop_toBottomOf="@id/img_product1"
                        app:layout_constraintEnd_toEndOf="@id/img_product1">

                        <TextView
                            android:id="@+id/tv_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="Classic Black Main Shoes\n- Dominate the soccer field with the ProStrike Elite Soccer Cleats. These high-performance cleats are engineered for professional players who demand speed, agility, and control. The lightweight yet durable construction enhances your movement, while the advanced stud pattern provides optimal traction on various surfaces. The innovative cushioning technology absorbs impact, reducing the risk of injuries during intense matches. With a sleek design and precision craftsmanship, these cleats will elevate your game to new heights"
                            android:minLines="3"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_new_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_price1"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name1"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_product1"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name1" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/ctTop1"
                    android:orientation="horizontal">

                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_edit_shoe1"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_background"
                        android:fontFamily="@font/poppins_light"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_delete_shoe1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:background="@drawable/blue_background_red"
                        android:fontFamily="@font/poppins_light"
                        android:text="Delete"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/g_card_background"
                android:layout_margin="5dp"
                android:paddingBottom="5dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctTop2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/img_product2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/mau_giay2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linear_product_name2"
                        android:layout_width="0dp"
                        android:paddingRight="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/img_product2"
                        app:layout_constraintTop_toBottomOf="@id/img_product2"
                        app:layout_constraintEnd_toEndOf="@id/img_product2">

                        <TextView
                            android:id="@+id/tv_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="VelocityX Pro Soccer Cleats\n- Unleash your speed and power on the soccer pitch with the VelocityX Pro Soccer Cleats. These cleats are designed for the agile player who thrives on rapid movements and quick changes of direction. The lightweight synthetic upper offers a snug fit, while the responsive soleplate enhances your acceleration. The multidirectional studs provide exceptional grip, allowing you to maintain control even on wet or uneven surfaces. With cutting-edge materials and advanced technology, these cleats are your key to outperforming your opponents."
                            android:minLines="3"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_new_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_price2"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name2"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_product2"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name2" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/ctTop2"
                    android:orientation="horizontal">

                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_edit_shoe2"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_background"
                        android:fontFamily="@font/poppins_light"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_delete_shoe2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:background="@drawable/blue_background_red"
                        android:fontFamily="@font/poppins_light"
                        android:text="Delete"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/g_card_background"
                android:layout_margin="5dp"
                android:paddingBottom="5dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/mau_giay3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linear_product_name"
                        android:layout_width="0dp"
                        android:paddingRight="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/img_product"
                        app:layout_constraintTop_toBottomOf="@id/img_product"
                        app:layout_constraintEnd_toEndOf="@id/img_product">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_light"
                            android:text="PrecisionStrike Control Soccer Cleats\n - Experience unparalleled ball control and accuracy with the PrecisionStrike Control Soccer Cleats. These cleats are engineered for players who value precision in every pass, shot, and tackle"
                            android:minLines="3"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_new_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_price"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="$1600"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/img_product"
                        app:layout_constraintTop_toBottomOf="@id/linear_product_name" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_below="@id/ctTop"
                    android:orientation="horizontal">

                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_edit_shoe"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:background="@drawable/blue_background"
                        android:fontFamily="@font/poppins_light"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />
                    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
                        android:id="@+id/btn_delete_shoe"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="25dp"
                        android:background="@drawable/blue_background_red"
                        android:fontFamily="@font/poppins_light"
                        android:text="Delete"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_add"
            android:foregroundTint="@color/g_blue"
            android:backgroundTint="@color/g_blue100"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            />
    </RelativeLayout>
</layout>