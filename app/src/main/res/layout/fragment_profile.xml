<?xml version="1.0" encoding="utf-8"?>
<layout>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/g_line">

            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/g_blue"
                android:orientation="horizontal"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="45dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mau_giay" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/cv"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="duyvan"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Banlance: $ 20.50"
                        android:textColor="@color/white" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lnWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlHeader"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="My Order"
                    android:textColor="@color/g_blue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/topay"
                            android:gravity="center"
                            android:text="To Pay"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/toship"
                            android:gravity="center"
                            android:text="To Ship"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/baseline_local_shipping_24"
                            android:gravity="center"
                            android:text="To Receive"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/to_rate"
                            android:gravity="center"
                            android:text="To Rate"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>


                <!--        my wallet-->
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="My Wallet"
                    android:textColor="@color/g_blue"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/wallet"
                            android:gravity="center"
                            android:text="ShoePay"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/money"
                            android:gravity="center"
                            android:text="My Coins"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnWallet"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_card_giftcard_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Start Selling"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_attach_money_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Rewards"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_favorite_border_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="My Likes"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_access_time_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Recently Viewed"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_sync_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="User Balance"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/money"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="My Shoe Coins"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/to_rate"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="My Rating"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_phonelink_ring_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Affiliate Program"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_save_alt_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Saving Pass"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln3"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/acc_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Account Settings"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_help_outline_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Help Centre"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:drawableLeft="@drawable/baseline_logout_24"
                    android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/g_blue_gray200" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</layout>
